<Window x:Class="StudyChinese.QuizWindows.QuizStep2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание викторины — Шаг 2" Height="600" Width="1000"
        Background="#FFF5F5"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Эффект тени -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#000000" 
                          Direction="315" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="10"/>

        <!-- Кнопка назад -->
        <Style x:Key="BackButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Карточки тем -->
        <Style x:Key="ThemeCard" TargetType="Border">
            <Setter Property="Background" Value="#FFD7D7"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Большая белая карточка с тенью -->
        <Style x:Key="BigCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Красная кнопка -->
        <Style x:Key="RedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4C4C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B22222"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="40,20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="900">

            <!-- Шапка -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                <Button x:Name="BackButton" Style="{StaticResource BackButton}" Content="←"/>
                <TextBlock Text="Создание викторины"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левый блок с темами -->
                <Border Style="{StaticResource BigCard}" Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="Темы" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>

                        <!-- Тема как TextBox -->
                        <Border Style="{StaticResource ThemeCard}">
                            <StackPanel>
                                <TextBox Text="Тема 1" 
                                         FontWeight="SemiBold" 
                                         Foreground="#333333" 
                                         BorderThickness="0"
                                         Background="Transparent"/>
                                <TextBlock Text="0 вопросов" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Правый блок с вопросами -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <Border Style="{StaticResource BigCard}">
                        <StackPanel>

                            <!-- Заголовок блока прямо в border -->
                            <TextBlock Text="Тема 1"
                                       FontWeight="SemiBold"
                                       FontSize="18"
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Style="{StaticResource RedButton}" Content="+ Добавить вопрос"/>
                            </StackPanel>

                            <TextBlock Text="В этой теме пока нет вопросов. Добавьте первый вопрос!" 
                                       Foreground="Red" 
                                       TextWrapping="Wrap"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка сохранить под блоком -->
                    <Button Style="{StaticResource RedButton}" 
                            Content="Сохранить викторину" 
                            HorizontalAlignment="Right" 
                            Margin="0,15,0,0"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
