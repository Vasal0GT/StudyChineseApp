<Window x:Class="StudyChinese.QuizWindows.Quiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Своя Игра"
        Height="600"
        Width="800"
        Background="#FFF5F5"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          Direction="315"
                          ShadowDepth="2"
                          Opacity="0.1"
                          BlurRadius="10"/>

        <Style x:Key="BackButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">

        <!-- Верхняя панель -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Top">
            <Button x:Name="BackButton" Style="{StaticResource BackButton}" Content="←" Click="BackButton_Click" />
            <TextBlock x:Name="QuizTitle"
                       Text="Своя игра"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333333"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Игровая таблица -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="30"
                Margin="0,80,0,0"
                BorderBrush="#FFA2A2"
                BorderThickness="2"
                Effect="{StaticResource CardShadow}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid x:Name="GameGrid"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
