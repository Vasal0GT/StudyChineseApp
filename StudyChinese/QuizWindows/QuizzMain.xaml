<Window x:Class="StudyChinese.QuizzMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyChinese"
        Title="Викторина" Height="450" Width="800"
        Background="#FFF5F5"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized">
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#000000" 
                          Direction="315" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="10"/>
        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="450"/>
            <Setter Property="Height" Value="200"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation To="1.05" Duration="0:0:0.2" Storyboard.TargetProperty="RenderTransform.ScaleX"/>
                            <DoubleAnimation To="1.05" Duration="0:0:0.2" Storyboard.TargetProperty="RenderTransform.ScaleY"/>
                            <DoubleAnimation To="0.2" Duration="0:0:0.2" Storyboard.TargetProperty="(Effect).Opacity"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation To="1" Duration="0:0:0.2" Storyboard.TargetProperty="RenderTransform.ScaleX"/>
                            <DoubleAnimation To="1" Duration="0:0:0.2" Storyboard.TargetProperty="RenderTransform.ScaleY"/>
                            <DoubleAnimation To="0.1" Duration="0:0:0.2" Storyboard.TargetProperty="(Effect).Opacity"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BackButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#666666"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,30">
                <Button x:Name="BackButton" Style="{StaticResource BackButton}" Content="←" Margin="0,0,30,0" Click="BackButton_Click"/>
                <TextBlock Text="Викторина" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Card Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="PlayButton" Style="{StaticResource CardButton}" Margin="0,0,40,0">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Играть" 
                                   FontSize="24" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333333"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Выберите викторину и начните играть" 
                                   FontSize="14" 
                                   FontWeight="Normal" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ControlButton" Style="{StaticResource CardButton}" Click="ControlButton_Click" >
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Управление" 
                                   FontSize="24" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333333"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Создавайте и редактируйте" 
                                   FontSize="14" 
                                   FontWeight="Normal" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
