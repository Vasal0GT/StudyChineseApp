<Window x:Class="StudyChinese.QuizWindows.QuizStep1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Создание викторины" Height="600" Width="800"
        Background="#FFF5F5"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Эффект тени -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#000000" 
                          Direction="315" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="10"/>

        <!-- Кнопка назад -->
        <Style x:Key="BackButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Поле ввода с Placeholder в розовой карточке -->
        <Style x:Key="PinkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFD7D7"/>
            <Setter Property="BorderBrush" Value="#FFA2A2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6" 
                                Padding="5"
                                Effect="{StaticResource CardShadow}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock x:Name="Watermark"
                                           Text="{TemplateBinding Tag}" 
                                           Foreground="#888"
                                           Margin="10,0,0,0"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center"
                                           Visibility="Hidden"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- Шапка -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                <Button x:Name="BackButton" Style="{StaticResource BackButton}" Content="←" />
                <TextBlock Text="Создание викторины"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Общий прямоугольник с розовой границей -->
            <Border Background="White" CornerRadius="10" Padding="30" Width="800" BorderBrush="#FFA2A2" BorderThickness="2" Effect="{StaticResource CardShadow}">
                <StackPanel>

                    <TextBlock Text="Шаг 1: Основная информация"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,20"/>

                    <!-- Название викторины -->
                    <TextBlock Text="Название викторины" FontSize="14" Margin="0,0,0,2"/>
                    <TextBox Style="{StaticResource PinkTextBox}" Tag="Например: Базовая лексика HSK1"/>

                    <!-- Описание -->
                    <TextBlock Text="Описание (необязательно)" FontSize="14" Margin="0,0,0,2"/>
                    <TextBox Style="{StaticResource PinkTextBox}" Tag="Краткое описание викторины..." Height="60" AcceptsReturn="True"/>

                    <!-- Две колонки -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,10,0" Grid.Column="0">
                            <TextBlock Text="Количество тем" FontSize="14" Margin="0,0,0,2"/>
                            <TextBox Style="{StaticResource PinkTextBox}" Text="1"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0" Grid.Column="1">
                            <TextBlock Text="Баллов за вопрос" FontSize="14" Margin="0,0,0,2"/>
                            <TextBox Style="{StaticResource PinkTextBox}" Text="10"/>
                        </StackPanel>
                    </Grid>

                    <!-- Кнопка Далее -->
                    <Button Content="Начать игру" Width="250" Height="50" Margin="0 27 0 0" Click="Button_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <!-- Базовые свойства -->
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#FFA2A2"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>

                                <!-- Шаблон кнопки -->
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="6" 
                                                    Padding="10,5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"
                                                                  RecognizesAccessKey="True"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <!-- Триггеры -->
                                <Style.Triggers>
                                    <!-- При наведении -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <!-- При нажатии -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#B22222"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>

</Window>
