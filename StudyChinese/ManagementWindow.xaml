<Window x:Class="StudyChinese.ManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyChinese"
        mc:Ignorable="d"
Title="Управление викторинами" Height="450" Width="800"
        Background="#FFF5F5"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized">
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#000000" 
                          Direction="315" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="10"/>
        <Style x:Key="BackButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D40009"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0E0"/>
                    <Setter Property="Foreground" Value="#A00000"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CreateButton" TargetType="Button">
            <Setter Property="Background" Value="#D40009"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A00000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    Margin="0,50,0,0">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        Margin="0,0,0,30">
                <Button x:Name="BackButton" Style="{StaticResource BackButton}" Content="←" Click="BackButton_Click"/>
                <TextBlock Text="Управление викторинами" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#D40009" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
            </StackPanel>

            <!-- Input Row -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,40">
                <Border Background="White" 
                        BorderBrush="#FFC0C0" 
                        BorderThickness="1" 
                        CornerRadius="20" 
                        Width="400" 
                        Height="40">
                    <TextBox Text="Моя викторина" 
                             BorderThickness="0" 
                             VerticalContentAlignment="Center" 
                             Padding="20,0" 
                             FontSize="16" 
                             Foreground="#333333"/>
                </Border>
                <Button Content="Создать новую" 
                        Style="{StaticResource CreateButton}" 
                        Margin="20,0,0,0"
                        Click="CreateNewQuiz_Click"/>
            </StackPanel>

            <!-- Empty State Card -->
            <Border Background="White" 
                    CornerRadius="10" 
                    Width="600" 
                    Padding="40" 
                    Effect="{StaticResource CardShadow}"
                    HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="У вас пока нет викторин" 
                               FontSize="18" 
                               Foreground="#D40009" 
                               HorizontalAlignment="Center"/>
                    <Button Content="Создать первую викторину" 
                            Style="{StaticResource CreateButton}" 
                            Width="250" 
                            Margin="0,30,0,0"
                            Click="CreateFirstQuiz_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
