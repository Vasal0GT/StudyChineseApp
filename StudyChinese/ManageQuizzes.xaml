<Window x:Class="StudyChinese.ManageQuizzes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManageQuizzes"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        Margin="40,0,0,30">
                <Button x:Name="BackButton" 
                        Style="{StaticResource BackButton}" 
                        Content="←" 
                        Margin="0,0,20,0"/>
                <TextBlock Text="Управление викторинами" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Переключатель -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,20">
                <ToggleButton x:Name="MyQuizzesToggle"
                              Width="200"
                              Height="40"
                              Content="Мои викторины"
                              FontSize="16"
                              FontWeight="SemiBold"
                              IsChecked="True"
                              Margin="0,0,10,0"/>
                <ToggleButton x:Name="CreateNewToggle"
                              Width="200"
                              Height="40"
                              Content="Создать новую"
                              FontSize="16"
                              FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Динамический контент -->
            <ContentControl x:Name="ContentArea"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
