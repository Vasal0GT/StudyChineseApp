<Window x:Class="StudyChinese.QuizWindows.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вопрос"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="#FFF5F5"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Тень -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          Direction="315"
                          ShadowDepth="2"
                          Opacity="0.15"
                          BlurRadius="12"/>

        <!-- Текст вопроса -->
        <Style x:Key="QuestionTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="40"/>
        </Style>

        <!-- Текст ответа -->
        <Style x:Key="AnswerTextStyle" TargetType="TextBlock" BasedOn="{StaticResource QuestionTextStyle}">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="#B22222"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Кнопка "Показать ответ" в твоём стиле -->
        <Style x:Key="RevealButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFA2A2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,27,0,0"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B22222"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Вопрос -->
        <TextBlock x:Name="QuestionText"
                   Text="Как переводится слово 学生 (xuéshēng)?"
                   Style="{StaticResource QuestionTextStyle}"
                   VerticalAlignment="Center"/>

        <!-- Ответ (появляется после нажатия) -->
        <TextBlock x:Name="AnswerText"
                   Text="Ответ: студент, ученик"
                   Style="{StaticResource AnswerTextStyle}"
                   VerticalAlignment="Center"
                   Margin="0,150,0,0"/>

        <!-- Кнопка -->
        <StackPanel VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,60">
            <Button x:Name="RevealButton"
                    Content="Показать ответ"
                    Style="{StaticResource RevealButtonStyle}"
                    Click="RevealButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
